generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Poll {
  id          Int @id @default(autoincrement())
  name        String
  question    String
  options     Json
  votes       Int[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  pollVotes   PollVotes[] // Relation field
}

model PollVotes {
  id          String   @id @default(uuid())
  pollId      Int
  poll        Poll     @relation(fields: [pollId], references: [id]) // Relation field
  option      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}
